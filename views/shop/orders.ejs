<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css" />

<body>
  <%- include('../includes/nav.ejs') %>
  <main>
    <% if(products.length){ %>
    <div class="grid" style="display: flex;flex-direction: column;">
      <% for(let p of products) {%>
      <article class="card" style="height: 50px;
      display: flex;
      margin: 10px;
      justify-content: space-between;
      align-items: center;">
        <header class="card__header">
          <h1 class="product__title"><%= p.product.title %></h1>
        </header>
        <!-- <div class="card__image">
          <img src="<%= p.product.imageUrl%>" alt="A Book" />
        </div> -->

        <div class="card__content" style="display: flex;">
          <h2 class="product__price">
            <%= p.product.price%> <span style="color: red">₹</span>
          </h2>
          <!-- <p class="product__description"><%=p.product.description%></p> -->
          <h2 style="text-align: center;"> &nbsp; x Quantity: <%=p.quantity%></h2>
        </div>
        
        <div class="card__actions">
          <a href="/products/<%= p.product._id%>" class="btn">Details</a>
        </div>
      </article>

      <% } %>
    </div>
    <div class="cart__actions" style="border: 3px solid white;border-radius: 20px;margin-top: 1rem;">
      <div class="card__content" style="margin: auto">
        <h2 class="product__price">
          <span style="color: blue">Total Price:</sapn>
          <span><%= totalPrice%></span>
          <span style="color: red"> ₹</span>
        </h2>
      </div>
      <form action="/checkout" method="post">
        <button type="submit" style="margin: 1rem auto" class="btn">Check Out</button>
      </form>
    </div>

    <% } else{ %>
    <h1 style="text-align: center">No Orders</h1>
    <% } %>
  </main>
</body>
